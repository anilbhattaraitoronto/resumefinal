<article class="form-container">
    <span class="close-form">Close X</span>
    <h3 class="form-title">Add New Blog</h3>
    <form action="/blogs/create" class="create-form" method="POST">
        <div class="form-item">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" required>
        </div>
        <div class="form-item">
            <label for="keywords">Keywords</label>
            <input type="text" id="keywords" name="keywords" required>
        </div>
        <div class="form-item">
            <label for="summary">Summary</label>
            <input type="text" id="summary" name="summary" required>
        </div>
        <div class="form-item"><label for="author">Author</label>
            <input type="text" id="author" name="author" required>
        </div>
        <div class="form-item"><label for="content">Content</label>
            <textarea name="content" id="content" cols="30" rows="10" required></textarea>
        </div>

        <div class="form-item">
            <button class="submit-button">Add New Blog</button>
        </div>
    </form>
</article>