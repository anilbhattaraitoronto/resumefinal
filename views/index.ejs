<main class="main-content home-page">
    <div class="home-page-static">
        <img src="/images/profile_pic.jpg" alt="Anil Bhattarai Profile Picture" class="profile-picture">
    </div>
    <% if (blogs){%>
    <div class="blog-container">
        <h3 class="section-title">Latest Blogs</h3>
        <% blogs.forEach((blog)=>{%>
        <div class="blog">
            <h3 class="blog-title"><%= blog.title %></h3>
            <h4 class="blog-author"><%= blog.author%></h4>
            <p>Summary: <em><%=blog.summary%></em></p>
            <p>Keywords: <em><%=blog.keywords%></em></p>
            <div class="blog-content">
                <details>

                    <summary class="blog-summary"></summary>
                    <p><%-blog.content%></p>
                    <p class="posted-date"><%= blog.posted_date %></p>
                </details>
            </div>
        </div>
        <%})%>
    </div>
    <%}%>
</main>