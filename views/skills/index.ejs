<main class="main-content">
    <h2 class="page-title">All Skills</h2>
    <% if (skills){%>
    <div class="skill-container">
        <% skills.forEach((skill)=>{%>
        <article class="item">
            <h3><%= skill.title %></h3>
            <p><%- skill.description %></p>
            <% if(locals.user && locals.user.is_admin===1){%>
            <details>
                <summary class="update-summary"></summary>
                <article class="update-form-container">
                    <h3 class="form-title">UpdateSkill</h3>
                    <form action="/skills/update" class="update-form" method="POST">
                        <input type="hidden" name="skillid" value="<%=skill.skillid%>">
                        <div class="form-item">
                            <label for="title">Title</label>
                            <input type="text" id="title" name="title" value="<%=skill.title%>" required>
                        </div>
                        <div class="form-item">
                            <label for="description">Description</label>
                            <textarea name="description" id="description" cols="30" rows="10" required>
                                <%=skill.description%>
                            </textarea>
                        </div>
                        <div class="form-item">
                            <button class="submit-form">Update Skill</button>
                        </div>
                    </form>
                </article>
            </details>
            <details>
                <summary class="delete-summary"></summary>
                <form action="/skills/delete" method="POST">
                    <input type="hidden" name="skillid" value="<%= skill.skillid%>">
                    <button>Are You Sure? Remove?</button>
                </form>
            </details>

            <%}%>
        </article>
       
        <%})%>
    </div>
    <%}%>
</main>